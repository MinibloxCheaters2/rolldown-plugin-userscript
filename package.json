{
	"name": "rolldown-plugin-userscript",
	"version": "1.1.0",
	"description": "Rolldown plugin for UserScripts",
	"author": "Gerald <gera2ld@live.com>",
	"license": "MIT",
	"scripts": {
		"ci": "bun run lint && bun run test",
		"lint": "biome check",
		"dev": "tsdown --watch",
		"clean": "rm -rf dist",
		"build": "tsdown",
		"test": "vitest --run",
		"prepublishOnly": "bun run build"
	},
	"type": "module",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"keywords": [
		"rolldown",
		"userscript"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"dependencies": {
		"@oxc-project/types": "^0.115.0",
		"@rolldown/pluginutils": "^1.0.0-rc.6",
		"@rollup/pluginutils": "^5.3.0",
		"oxc-parser": "^0.115.0",
		"oxc-walker": "^0.7.0",
		"rolldown-string": "^0.2.1",
		"vitest": "^4.0.18"
	},
	"devDependencies": {
		"@types/node": "^25.3.3",
		"@biomejs/biome": "^2.4.4",
		"globals": "^17.3.0",
		"husky": "^9.1.7",
		"rolldown": "^1.0.0-rc.6",
		"typescript": "^5.9.3",
		"tsdown": "0.21.0-beta.2"
	},
	"peerDependencies": {
		"rolldown": "^1.0.0-rc.6"
	},
	"repository": "git@github.com:violentmonkey/rollup-plugin-userscript.git",
	"engines": {
		"node": ">=18",
		"bun": ">=1"
	}
}
